<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="ramenmachine.model.sqlmap.IngredientMapper">

	<select id = "getIngredientList" resultType = "Ingredient">
		SELECT *
		FROM INGREDIENT
	</select>
	
